{
    "seed": 31,
    "train_mode": true,
    "run_mode": true,

    "core":{
        "TAG": "all",
        "data_name": "stock.sample",
        "outputs": "TIMEBAND/outputs/",
        
        "pretrain": true,
        
        "workers": 2,
        "batch_size": 128,
        "observed_len": 10,
        "forecast_len": 5,

        "verbosity": 0
    },
    
    "dataset": {
        "directory": "data/",

        "targets": ["close"],
        "drops": [],

        "time_index": "date",
        "time_format": "%y/%m/%d",
        "time_info":{
            "month": true,
            "weekday": true,
            "days": true,
            "hours": false,
            "minutes": false
        },

        "stride": 1,
        "split_rate": 0.8,
        "min_valid_scale": 2,
        "sliding_step": 1,

        "zero_is_missing": true,
        "zero_impute": true,
        "zero_ignore": true,
        "cutoff": {
            "min": 0.0001,
            "max": 0.0001
        }
    },
    "models": {
        "save_opt": true,
        "load_opt": true,

        "best_score": 0.5,
        "hidden_dim": 256,
        "layers_num": 1
    },
    "losses": {
        "l1_weight": 1,
        "l2_weight": 1,
        "gp_weight": 1
    },
    "trainer": {
        "models":{
            "reload": true,
            "reload_interval": 25,
            "save_interval": 10
        },
        "epochs": {
            "base": 0,
            "iter": 50,
            "critic": 5
        },
        "learning_rate": {
            "base": 2e-4,
            "decay": 0.9,
            "gammaD": 0.5,
            "gammaG": 1.0
        },
        "band_width": 3,
        "missing_gamma": 0.1,
        "anomaly_gamma": 0.1
    },
    "dashboard": {
        "vis_opt": false,
        "vis_column": 2, 
        "scope": 90,
        
        "feats_by_rows": 1,
        "xinterval": 60,

        "height": 10,
        "width": 25
    }
}
